<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogHostGameOnline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hostGameDialogStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Waiting for players"
        android:textAllCaps="true"
        android:textColor="?colorText" />

    <ProgressBar
        android:id="@+id/progressBarDialogHostGameOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/hostGameDialogQRCode"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:textColor="?colorText" />

    <Button
        android:id="@+id/hostGameDialogShareLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:text="Share link"
        android:textColor="?colorText" />
</LinearLayout>